{% extends "ArticleBundle::design.html.twig" %}

{% block title %}
  Supprimer un article - {{ parent() }}
{% endblock %}

{% block article_body %}

  <h2>Supprimer un article</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'article "{{ article.title }}" ?
  </p>

  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('article_supprime', {'id': article.id}) }}" method="post">
    <a href="{{ path('article_voir', {'id': article.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  l'article
    </a>
    
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    
    {{ form_rest(form) }}
  </form>

{% endblock %}
