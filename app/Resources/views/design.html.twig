{# app/Resources/views/design.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %} Blog {% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/superhero/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Mon Blog personnel</h1>
      <p>
        Ce projet est propulsé par Symfony2,
        et construit grâce au MOOC OpenClassrooms et SensioLabs ainsi que le professeur Arnaud Castellane de l'esiea.
      </p>
      <p>
       Participer au blog....
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Les articles</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('article_home') }}">Accueil</a></li>
          <li><a href="{{ path('article_ajout') }}">Ajouter un article</a></li>
        </ul>

        <h4>Derniers Articles</h4>
        {{ render(controller("ArticleBundle:Article:menu", {'limit': 3})) }}
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      <p>Le copyright est dépassé depuis {{ 'now'|date('M Y') }}.</p>
    </footer>
  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/superhero/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>
